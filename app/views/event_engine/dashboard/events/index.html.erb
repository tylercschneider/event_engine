<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Event Name</th>
      <th>Version</th>
      <th>Status</th>
      <th>Created At</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr class="event-row">
        <td><%= event.id %></td>
        <td><%= event.event_name %></td>
        <td><%= event.event_version %></td>
        <td>
          <% if event.dead_lettered? %>
            <span class="status-dead-lettered">Dead Lettered</span>
          <% elsif event.published_at? %>
            <span class="status-published">Published</span>
          <% else %>
            <span class="status-pending">Pending</span>
          <% end %>
        </td>
        <td><%= event.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= link_to "View", dashboard_event_path(event) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pagination">
  <% if @page > 1 %>
    <%= link_to "Previous", dashboard_events_path(page: @page - 1) %>
  <% end %>

  <span>Page <%= @page %> of <%= @total_pages %></span>

  <% if @page < @total_pages %>
    <%= link_to "Next", dashboard_events_path(page: @page + 1) %>
  <% end %>
</div>
